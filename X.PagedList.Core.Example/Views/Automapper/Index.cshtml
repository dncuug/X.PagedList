@{
    ViewBag.Title = "Automapper";
}
@model X.PagedList.IPagedList<X.PagedList.Core.Example.Controllers.AutomapperController.OrderViewModel>
@using X.PagedList.Core;

<h2>Integrating with <a href="http://automapper.org/">AutoMapper</a></h2>
<ul>
	@foreach (var example in Model){ 
		<p>@example.CustomerName: $@example.Total</p>
	}
</ul>

<paged-list-pager list="@Model" page-url="@(page => Url.Action("Index", new { page }))" />